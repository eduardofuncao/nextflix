@model NextFlix.Models.Media

@{
    ViewData["Title"] = "Delete Confirmation";
}

<h1 xmlns="http://www.w3.org/1999/html">Confirmação de exclusão</h1>

<h3>Você tem certeza que quer excluir esse Review?</h3>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>

        <dt class="col-sm-2">
            Data de lançamento
        </dt>
        <dd class="col-sm-10">
            @Model.ReleaseDate.ToString("yyyy-MM-dd")
        </dd>

        <dt class="col-sm-2">
            Diretor
        </dt>
        <dd class="col-sm-10">
            @Model.Director
        </dd>

        <dt class="col-sm-2">
            Gênero
        </dt>
        <dd class="col-sm-10">
            @Model.Genre
        </dd>

        <dt class="col-sm-2">
            Assistiu?
        </dt>
        <dd class="col-sm-10">
            @(Model.IsWatched ? "Yes" : "No")
        </dd>

        <dt class="col-sm-2">
            Nota
        </dt>
        <dd class="col-sm-10">
            @for (var i = 1; i <= 5; i++)
            {
                if (i <= Model.Rating)
                {
                    <span>&#9733;</span> 
                }
                else
                {
                    <span>&#9734;</span>
                }
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Lista" class="btn btn-secondary">Cancelar</a>
    </form>
</div>