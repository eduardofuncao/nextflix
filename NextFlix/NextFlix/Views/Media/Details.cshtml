@model NextFlix.Models.Media

@{
ViewData["Title"] = "Details of " + Model.Title;
}

<h1>Detalhe de @Model.Title</h1>

<div>
    <h4>Filme/Série</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>

        <dt class="col-sm-2">
            Data de lançamento
        </dt>
        <dd class="col-sm-10">
            @Model.ReleaseDate.ToString("yyyy-MM-dd")
        </dd>

        <dt class="col-sm-2">
            Diretor
        </dt>
        <dd class="col-sm-10">
            @Model.Director
        </dd>

        <dt class="col-sm-2">
            Gênero
        </dt>
        <dd class="col-sm-10">
            @Model.Genre
        </dd>

        <dt class="col-sm-2">
            Tipo
        </dt>
        <dd class="col-sm-10">
            @Model.Type
        </dd>

        <dt class="col-sm-2">
            Assistiu?
        </dt>
        <dd class="col-sm-10">
            @(Model.IsWatched ? "Yes" : "No")
        </dd>

        <dt class="col-sm-2">
            Nota
        </dt>
        <dd class="col-sm-10">
            @for (var i = 1; i <= 5; i++)
            {
            if (i <= Model.Rating)
            {
            <span>&#9733;</span> <!-- Estrela cheia -->
            }
            else
            {
            <span>&#9734;</span> <!-- Estrela vazia -->
            }
            }
            <small class="d-block">(@Model.Rating / 5)</small>
        </dd>

        <dt class="col-sm-2">
            Review
        </dt>
        <dd class="col-sm-10">
            @Model.Review
        </dd>
    </dl>

    <div>
        <a asp-action="Lista" class="btn btn-secondary">Voltar para a lista</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Deletar</a>
    </div>
</div>
